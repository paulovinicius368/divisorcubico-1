
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check user role
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
  
    // Allocations: Admins can do anything, authenticated users can read/write but not delete.
    match /allocations/{allocationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Create and Update
      allow delete: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }

    // Users: Only admins can manage user roles. Users can read their own data.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || getUserRole(request.auth.uid) == 'admin');
      allow list, write, delete: if request.auth != null && getUserRole(request.auth.uid) == 'admin';
    }
  }
}

    